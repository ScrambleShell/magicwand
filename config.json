{
  "devices": [{
      "name": "Name of Device"
    },
    {
      "dev": "/dev/input/eventX"
    }
  ],
  "rules": [{
      "application": "Firefox",
      "hwheel": 1,
      "dial": 0,
      "action": {
        "keycode": "42-29-15",
        "dbus": {}
      }
    },
    {
      "application": "Firefox",
      "hwheel": -1,
      "dial": 0,
      "action": {
        "keycode": "29-15",
        "dbus": {}
      }
    },
    {
      "hwheel": 0,
      "dial": -1,
      "action": {
        "keycode": "114",
        "dbus": {}
      }
    },
    {
      "hwheel": 0,
      "dial": 1,
      "action": {
        "keycode": "115",
        "dbus": {}
      }
    },
    {
      "application": "!Firefox",
      "keycode": "275",
      "hwheel": 0,
      "dial": 0,
      "action": {
        "dbus": {
          "object": "org.kde.KWin",
          "path": "/KWin",
          "method": "org.kde.KWin.previousDesktop"
        }
      }
    },
    {
      "application": "!Firefox",
      "keycode": "276",
      "hwheel": 0,
      "dial": 0,
      "action": {
        "dbus": {
          "object": "org.kde.KWin",
          "path": "/KWin",
          "method": "org.kde.KWin.nextDesktop"
        }
      }
    }
  ]
}